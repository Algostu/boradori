#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>
#include <time.h>

#define _USE_MATH_DEFINES

#define COMPARE(X, Y) (X) > (Y) ? 1 : ((X) == (Y) ? 1 : 0)

#define SWAP(X, Y, T) T = (X); (X) = (Y); (Y) = T;

#define MALLOC(X, Y) \
if(((X) = malloc((Y)))==NULL){\
  fprintf(stderr, “mallc error”); exit(EXIT_FAILURE);\
}

typedef int (*board)[15];

void mark(board arr, int a, int b, int size, int * mark_num){
	int i;
	int count = 0;
	for(i = -20; i<20;i++){
		if(a + i >= 0 && a + i < size && b + i >= 0 && b + i < size){
			if (arr[b+i][a+i] == 1)count++;
			arr[a+i][a+i] = 0; 
		}
	}
	
	for(i = -20; i<20;i++){
		if(a + i >= 0 && a + i < size && b - i >= 0 && b - i < size){
			if (arr[b+i][a-i] == 1) count++;
			arr[b+i][a-i] = 0; 
		}
	}
	
	for(i = 0; i < size;i++){
		if(arr[i][a] == 1)count++;
		arr[i][a] = 0;
	}
	
	for(i = 0; i < size;i++){
		if(arr[b][i] == 1) count++;
		arr[b][i] = 0;
	}
		
	*mark_num = count;
}

void n_queen(board arr, int n, int r, int remaining, int * ans){
	int i, j, temp=0;
	int copy_arr[15][15];
	
	memcpy(copy_arr, arr, sizeof(int)*15*15);
	 
	if(r == 0){
		(*ans) ++;	
	} else if(remaining == 0) {
		printf(“r : %d\n”, r);
		return;
	}
	else{
		for(i=0;i<n;i++){
			for(j=0;j<n;j++){
				if(arr[i][j] == 1) {
					copy_arr[i][j] = 0;
					mark(arr, j, i, n, &temp);
					break;
				}
			}
		}
		n_queen(arr, n, r-1, remaining-temp, ans);
		n_queen(copy_arr, n, r, remaining-1, ans);
	}
}

void solve(int test_num){
	int i, j;
	int N;
	int chess[15][15];
	int ans = 0;
	scanf(“%d”, &N);
	
	for(i=0;i<15;i++){
		for(j=0;j<15;j++){
			chess[i][j] = 1;
		}
	}
	n_queen(chess, N, N, N*N, &ans);
	
	printf(“%d\n”, ans);
}

int main(){
  // int i, N;
  // scanf(“%d”, &N);
  // for(i=0;i<N;i++){
  //     solve();
  // }

  	solve(0);

	return 0;
}

